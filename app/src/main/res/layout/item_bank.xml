<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/bg_gray_r10"
    android:orientation="vertical"
    android:padding="12dp"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/iv_bank_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/image_asia_aliance_bank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/TextStyle.Bold"
        android:layout_marginStart="12dp"
        android:text="Ishonch"
        android:textColor="@color/color_font"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@id/tv_amount"
        app:layout_constraintStart_toEndOf="@id/iv_bank_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_amount"
        style="@style/TextStyle"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="Credit amount: 10 000 000 so\'m"
        android:textColor="@color/color_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_bank_1"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <TextView
        style="@style/TextStyle"
        android:background="@drawable/bg_green_r2"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:text="Suitable"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>